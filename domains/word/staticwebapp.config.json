{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html"
    }
  },
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST"],
      "rewrite": "/api/$1"
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "platform": {
    "apiRuntime": "node:18"
  },
  "buildProperties": {
    "outputLocation": ".next",
    "appLocation": "/domains/word",
    "appBuildCommand": "npm run build"
  }
}
